FROM node:lts
WORKDIR /frontend
COPY ./ .
ENV REACT_APP_BACKEND_URL http://localhost:5000
ENV REACT_APP_PUBLIC_SEND_MAIL mailit
ENV REACT_APP_PUBLIC_MENU menu
ENV REACT_APP_PUBLIC_API_KEY 81594eb3-b848-4db2-8909-0e0eaf93b5f7
ENV REACT_APP_PUBLIC_AUTHORIZATION Bearer cc8a60da-040c-41b0-8954-c99dde9e76ad
RUN npm i -g serve
RUN yarn
RUN yarn build
EXPOSE 3000
CMD npx serve build
